        system("cls");
        cout<<"Done";return;
    }
    else if(sel=='3')
    {
        diff=0.05;
        system("cls");
        cout<<"Done";return;
    }
    else if(sel=='4') return;
    else system("cls");
    }
}

}





































































































































































































































































































































































































































































































































