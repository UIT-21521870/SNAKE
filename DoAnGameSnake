bool checkFood(char s[][40],int fx,int fy)
{
  int x,y,c=0;
  for(x=1;x<49;x++)
  {
     for(y=1;y<39;y++)
     {
        if(s[x][y]=='o' && x==fx && y==fy)
        {
           c=1;
        }
     }
  }
  if(c==1) return true;
  else return false;
}

void spawnFood(char s[][40],int & fx,int & fy)
{
     int i,j;
     fx=(rand()%48)+1;
     fy=(rand()%38)+1;
     for(j=1;j<49;j++)
     {
        for(i=1;i<39;i++)
        {
           if(s[j][i]!=(char)219 && s[j][i]='o')
           {
              s[fx][fy]='+';
